<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/menu_bottom_sheet_camera"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/default_margin_padding_normal"
        android:drawableStart="@drawable/ic_baseline_camera_24px"
        android:gravity="center_vertical"
        android:padding="@dimen/default_margin_padding_normal"
        android:text="@string/txt_menu_camera" />

    <TextView
        android:id="@+id/menu_bottom_sheet_gallery"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/default_margin_padding_normal"
        android:drawableStart="@drawable/ic_baseline_add_photo_alternate_24px"
        android:gravity="center_vertical"
        android:padding="@dimen/default_margin_padding_normal"
        android:text="@string/txt_menu_gallery" />



</LinearLayout>